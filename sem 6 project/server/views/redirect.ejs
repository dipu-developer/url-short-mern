<!-- views/redirect.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting...</title>
    <style>
      .d-flex {
        display: flex;
        justify-content: center;
        width: 100%;
      }
      .video {
        width: 100%;
        height: 100%;
        max-height: 500px;
        max-width: 500px;
      }
      .display{
        text-align: center;
        font-size: 20px;
        color: #0D6EFD;
      }
      #countdown{
        color: #000;
        font-size: 24px;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <div class="d-flex">
      <video controls autoplay muted class="video">
        <source src="add1.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
    <p class="display">
      Redirecting to: <%= originalUrl %> in
      <span id="countdown">10</span> seconds.
    </p>
    <script>
      // Countdown timer
      let countdown = 10;
      const countdownElement = document.getElementById("countdown");
      const countdownInterval = setInterval(() => {
        countdown--;
        countdownElement.textContent = countdown;
        if (countdown <= 0) {
          clearInterval(countdownInterval);
          window.location.href = "https://<%= originalUrl %>";
        }
      }, 1000);
    </script>
  </body>
</html>
